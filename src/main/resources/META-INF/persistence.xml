<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">


	<persistence-unit name="defaultPU"  transaction-type="JTA">

		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>

		<properties>
			<property name="openjpa.ConnectionURL" value="jdbc:derby://localhost:1528/db_ddd_cqrs" />
			<property name="openjpa.ConnectionDriverName" value="org.apache.derby.jdbc.ClientDriver" />

			<property name="openjpa.jdbc.Schema" value="db_ddd_cqrs" />
			<property name="openjpa.Log" value="DefaultLevel=ERROR, Tool=INFO, Runtime=TRACE" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(SchemaAction='add,deleteTableContents')" />
		</properties>
		
	</persistence-unit>

</persistence>